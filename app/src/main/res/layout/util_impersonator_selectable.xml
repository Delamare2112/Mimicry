<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="3dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.github.jackkell.mimicryproject.testactivities.GetTimelineActivity"
    android:orientation="vertical"
    android:background="@drawable/customborder">

    <TextView
        android:id="@+id/tvImpersonatorName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:typeface="serif"
        android:text="Impersonator Name"
        android:textSize="@dimen/h3"
        android:paddingBottom="15sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvPostCount"
            android:text="##"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="Trebuchet"
            android:textSize="20sp"
            android:layout_marginRight="5sp"/>

        <ImageView
            android:id="@+id/ivPostImage"
            android:src="@drawable/image_posting"
            android:layout_width="25dp"
            android:layout_height="20dp"
            android:scaleType="fitXY"
            android:layout_marginRight="15sp"/>

        <TextView
            android:id="@+id/tvFavoriteCount"
            android:text="##"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_marginRight="5sp"/>

        <ImageView
            android:id="@+id/ivFavoriteImage"
            android:src="@drawable/image_favorite"
            android:layout_width="25dp"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:layout_marginRight="15sp"/>

        <TextView
            android:id="@+id/tvTweetCount"
            android:text="##"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_marginRight="15sp"/>

        <ImageView
            android:id="@+id/ivTweetImage"
            android:src="@drawable/image_tweet"
            android:layout_width="25dp"
            android:layout_height="20dp"/>

        <TextView
            android:id="@+id/tvDateCreated"
            android:text="##-##-####"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:gravity="right"/>


    </LinearLayout>

</LinearLayout>