<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.github.jackkell.mimicryproject.testactivities.GetTimelineActivity"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvImpersonatorName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Impersonator Name"
        android:textSize="@dimen/h4"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvPostCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="##"/>

        <ImageView
            android:id="@+id/ivPostImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tvFavoriteCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="##"/>

        <ImageView
            android:id="@+id/ivFavoriteImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tvTweetCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/ivTweetImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tvDateCreated"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="##-##-####"
            android:gravity="right"/>


    </LinearLayout>

</LinearLayout>