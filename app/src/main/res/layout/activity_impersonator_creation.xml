<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.github.jackkell.mimicryproject.mainactivities.ImpersonatorCreationActivity"
    android:id="@+id/ImpersonatorCreation">

    <TextView
        android:id="@+id/impersonatorNameTextView"
        android:text="@string/impersonator_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/h4"
        android:layout_marginTop="@dimen/margin_medium"
        android:layout_marginLeft="@dimen/margin_none"/>

    <EditText
        android:id="@+id/ImpersonatorNameEditText"
        android:layout_width="275sp"
        android:layout_height="wrap_content"
        android:hint="@string/impersonator_name_prompt"
        android:layout_below="@+id/impersonatorNameTextView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="@dimen/margin_small"
        android:layout_marginLeft="@dimen/margin_medium"/>


    <TextView
        android:id="@+id/twitterUsernamesTextView"
        android:text="@string/twitter_usernames"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/h4"
        android:layout_below="@+id/ImpersonatorNameEditText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="@dimen/margin_medium"
        android:layout_marginLeft="@dimen/margin_none"/>



    <ScrollView
        android:id="@+id/twitterUsernameScrollView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/ImpersonatorNameEditText"
        android:layout_alignStart="@+id/ImpersonatorNameEditText"
        android:layout_below="@+id/twitterUsernamesTextView"
        android:layout_above="@+id/createButtonSeparatorBar"
        android:layout_marginTop="@dimen/margin_small"
        android:layout_marginLeft="@dimen/margin_small">

        <TableLayout
            android:id="@+id/twitterUsernameTableLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </TableLayout>
    </ScrollView>

    <View
        android:id="@+id/createButtonSeparatorBar"
        android:layout_width="fill_parent"
        android:layout_height="1sp"
        android:background="@android:color/darker_gray"
        android:layout_above="@+id/createButton"
        android:layout_marginTop="@dimen/margin_small"
        />

    <Button
        android:id="@+id/createButton"
        android:text="@string/create_impersonator_prompt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/margin_medium"
        android:layout_marginBottom="@dimen/margin_none"
        />

</RelativeLayout>