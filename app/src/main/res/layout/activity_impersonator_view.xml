<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.github.jackkell.mimicryproject.mainactivities.ImpersonatorViewActivity">

    <ScrollView
        android:id="@+id/impersonatorViewScrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/createButtonSeparatorBar">

        <TableLayout
            android:id="@+id/impersonatorViewTableLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </TableLayout>

    </ScrollView>

    <View
        android:id="@+id/createButtonSeparatorBar"
        android:layout_width="fill_parent"
        android:layout_height="1sp"
        android:background="@android:color/darker_gray"
        android:layout_above="@+id/navigationArea"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="@string/margin_medium"/>

    <TableRow
        android:id="@+id/navigationArea"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="5"
        android:layout_marginTop="@string/margin_medium"
        android:layout_alignParentBottom="true"
        >

        <ImageButton
            android:id="@+id/settingsButton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="@string/margin_medium"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/postButton"
            android:text="@string/post_new_tweet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3"/>

        <ImageButton
            android:id="@+id/informationButton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@string/margin_medium"
            android:layout_weight="1"
            />

    </TableRow>

</RelativeLayout>
